<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    app:cardElevation="@dimen/space_3"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tecmanic.storemanager.Fonts.LatoBLack
                    android:id="@+id/assign_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_4"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_X_small" />

                <com.tecmanic.storemanager.Fonts.LatoBLack
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="right"
                    android:text="Status"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_X_small" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="@dimen/space_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="@dimen/space_4"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="@dimen/space_10"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/space_4"
                    tools:ignore="Suspicious0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_5"
                        android:orientation="horizontal">

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID :-"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_X_small" />

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/order_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/space_12"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_5"
                        android:orientation="vertical">

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Customer Name :-"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_X_small" />

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="cpjpojdkmxsa"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_X_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_5"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Socity :-"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_X_small" />

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/order_socity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_X_small" />
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="150dp"
                    android:background="#000"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/space_10"
                    android:background="#fff"
                    android:orientation="vertical"
                    tools:ignore="Suspicious0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_5"
                        android:orientation="vertical">

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Customer Phone :-"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_X_small" />

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/customer_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:gravity="center"
                            android:text="zfdsfwwefcwfqwef"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_X_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_5"
                        android:orientation="horizontal">

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Date :-"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_X_small" />

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_X_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_5"
                        android:orientation="vertical">

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Time :-"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_X_small" />

                        <com.tecmanic.storemanager.Fonts.LatoBLack
                            android:id="@+id/order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="sdcasxxxxxxx"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_X_small" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/space_4"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.tecmanic.storemanager.Fonts.LatoBLack
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Order Amount :"
                        android:textColor="@color/green"
                        android:textSize="@dimen/space_12" />

                    <com.tecmanic.storemanager.Fonts.LatoBLack
                        android:id="@+id/ammount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="@dimen/text_size_X_small" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/space_4"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.tecmanic.storemanager.Fonts.LatoBLack
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Payment Mode:"
                        android:textColor="@color/green"
                        android:textSize="@dimen/space_12" />

                    <com.tecmanic.storemanager.Fonts.LatoBLack

                        android:id="@+id/payment_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="@dimen/space_12" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:layout_height="wrap_content">

            <Button

                android:layout_width="wrap_content"
                android:text="Confirm"
                android:textColor="@color/white"
                android:id="@+id/confirm"
                android:layout_marginLeft="@dimen/space_20"
                android:background="@color/purple1"
                android:layout_height="wrap_content" />


            <Button
                android:layout_width="wrap_content"
                android:text="Pick Up"
                android:id="@+id/pickup"
                android:layout_marginLeft="@dimen/space_20"
                android:background="@color/orange"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancle"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/assign_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/assign_order_to"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_4"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/xml_textbox_bg"
                android:padding="12dp">

                <com.tecmanic.storemanager.Fonts.LatoBLack
                    android:id="@+id/order_assign_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Assign Order To Delivery"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_small" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/assign_order"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/bg_rounded_button"
                android:padding="12dp">

                <com.tecmanic.storemanager.Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Assign"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>