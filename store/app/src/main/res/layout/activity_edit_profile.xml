<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/RobotoBoldTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purple1">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_pro_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/icon" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginTop="@dimen/space_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <!--<LatoBLack-->
                    <!--android:id="@+id/tv_pro_name"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/space_4"-->
                    <!--android:gravity="center"-->
                    <!--android:text="@string/tv_reg_name_hint"-->
                    <!--android:textColor="#000"-->
                    <!--android:textSize="14sp" />-->

                <EditText
                    android:id="@+id/et_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableTint="#000"
                    android:layout_marginBottom="@dimen/space_5"
                    android:hint="@string/tv_reg_name_hint"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_4"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="10"
                    android:padding="@dimen/space_10"
                    android:gravity="start"
                    android:drawablePadding="@dimen/space_10"
                    android:inputType="text"
                    android:textSize="14sp" />

                <!--<LatoBLack-->
                    <!--android:id="@+id/tv_pro_phone"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/space_4"-->
                    <!--android:gravity="center"-->
                    <!--android:text="@string/et_login_phone_hint"-->
                    <!--android:textColor="#000"-->
                    <!--android:textSize="14sp" />-->

                <EditText
                    android:id="@+id/et_pro_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_20"
                    android:background="@drawable/xml_textbox_bg"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawableTint="#000"
                    android:ems="10"
                    android:hint="@string/et_login_phone_hint"
                    android:padding="10dp"
                    android:gravity="start"
                    android:drawablePadding="@dimen/space_10"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textSize="14sp" />


                <!--<LatoBLack-->
                    <!--android:id="@+id/tv_pro_email"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/space_4"-->
                    <!--android:gravity="center"-->
                    <!--android:text="@string/tv_login_email"-->
                    <!--android:textColor="#000"-->
                    <!--android:textSize="14sp" />-->

                <EditText
                    android:id="@+id/et_pro_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:hint="@string/tv_login_email"
                    android:padding="@dimen/space_10"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawableTint="#000"
                    android:layout_marginTop="@dimen/space_20"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="10"
                    android:gravity="start"
                    android:drawablePadding="@dimen/space_10"
                    android:textSize="14sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/btn_pro_edit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_rounded_button"
                android:padding="10dp">

                <com.tecmanic.storemanager.Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Continue"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_small" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>