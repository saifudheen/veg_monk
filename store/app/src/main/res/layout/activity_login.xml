<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tecmanic.storemanager.Dashboard.LoginActivity">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#fff"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/icon"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_20"
                android:background="#000"/>

            <com.tecmanic.storemanager.Fonts.LatoBLack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="SIGN IN"
                android:layout_marginTop="@dimen/space_20"
                android:textColor="#000"
                android:textSize="@dimen/text_size_x_large"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">


            <!--<LatoBLack-->
                <!--android:id="@+id/tv_login_email"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/space_10"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/tv_login_email"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp" />-->

            <EditText
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:hint="Email Id"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="#000"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:gravity="start"
                android:drawablePadding="@dimen/space_10"
                android:inputType="textEmailAddress"
                android:padding="@dimen/space_10"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp" />

            <!--<LatoBLack-->
                <!--android:id="@+id/tv_login_password"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/space_10"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/tv_login_password"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp" />-->

            <EditText
                android:id="@+id/et_login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawableTint="#000"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:hint="Password"
                android:gravity="start"
                android:drawablePadding="@dimen/space_10"
                android:inputType="textPassword"
                android:maxLength="10"
                android:padding="@dimen/space_10"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <com.tecmanic.storemanager.Fonts.LatoBLack
                android:id="@+id/btnForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/forgot"
                android:textColor="@color/purple1"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btnContinue"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_rounded_button"
                    android:padding="10dp">

                    <com.tecmanic.storemanager.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SIGN IN"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_normal" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
