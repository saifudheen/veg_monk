<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhpstore.app.Dashboard.ForgotActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/RobotoBoldTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purple1">


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/black"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/icon"
                android:textAlignment="center" />

            <!--<LatoBLack-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center"-->
                <!--android:gravity="center"-->
                <!--android:text=""-->
                <!--android:textColor="#000"-->
                <!--android:textSize="@dimen/text_size_x_large"-->
                <!--android:textStyle="bold" />-->


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_20"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/space_12"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--<LatoBLack-->
                <!--android:id="@+id/tv_login_email"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/space_10"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/tv_login_email"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp" />-->

            <EditText
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginTop="@dimen/space_4"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:hint="Email Id"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="#000"
                android:gravity="start"
                android:inputType="textEmailAddress"
                android:padding="@dimen/space_10"
                android:drawablePadding="@dimen/space_10"
                android:textAlignment="textStart"
                android:textColor="@color/green"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btnContinue"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp">

            <com.tecmanic.storemanager.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Send"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_normal" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
